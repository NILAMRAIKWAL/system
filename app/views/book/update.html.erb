<div class="Book Update">
	<h2> update Book</h2>

	<%= form_for(:books,url: {action: 'edit',id:@book.id}) do |t| %>

	<table summary="topic form fields">

		<tr>
			<th>book name </th>
			<td> <%= t.text_field(:name) %></td>

		</tr>

		<tr>
			<th> Author</th>
			<td> <%= t.text_field(:author) %></td>
		</tr>

		<tr>
			<th>price</th>
			<td> <%= t.text_field(:price) %></td>
		</tr>

	</table>
	<div class ="form-button">
		<%= submit_tag("Edit Book") %>
	</div>
	<% end %>