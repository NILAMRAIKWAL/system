
<html>
<head></head>
<style>
	body{ 
	background-image: url('http://wallpapercave.com/wp/QLnDcJB.jpg');

	}
</style>
<center>
<div class="Book Edit">
	<h2> Edit Book</h2>

	<%= form_for(:books,url: {action: 'update', id: @book.id}) do |t| %>

	<table summary="Topic form fields">

		<tr>
			<th>book name </th>
			<td> <%= t.text_field(:name) %></td> 
		</tr>

		<tr>
			<th> Author</th>
			<td> <%= t.text_field(:author) %></td>
		</tr>

		<tr>
			<th>price</th>
			<td> <%= t.text_field(:price) %></td>
		</tr>

	</table>
	<div class ="form-button">
		<%= submit_tag("Update Book") %>
	</div>
	<% end %>
</div>
</center>
</html>